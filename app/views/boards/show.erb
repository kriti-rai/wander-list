<h2><em><font color = "maroon"><%=@board.name%></font></em></h2>
<br>
<%if @board.trips.empty?%>
  <h4><font color="grey">Currently the board is empty.</font></h4>
<%else%>
  <h4><font color='grey'>Trips:</font></h4>
  <% @board.trips.each do |trip| %>
    <h4><a href = <%="#{trip.url}"%> target = "_blank"><%= trip.name %></a></h4>
    <% end %>
<%end%>
<br>
<% if @user == @board.user %>
  <p><a href='/boards/<%=@board.id%>/edit'>Edit board</a> | <a href='/users/<%=@user.slug%>'>My Boards</a> | <a href='/'>Home</a></p>
<% else %>
  <p><a href='/users'>Wanderers</a> | <a href='/'>Home</a></p>
<% end %>
